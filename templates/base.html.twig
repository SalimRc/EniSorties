<body>
    <header>
        {% include('inc/nav.html.twig') %}
    </header>
    {# lire et afficher les messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}

            </div>
        {% endfor %}
    {% endfor %}

    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        {% include('inc/bottom.html.twig') %}
    </footer>
